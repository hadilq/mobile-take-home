<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/pathSelectorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PathSelectorActivity"
        >

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bottomSheetLayout"
            android:layout_width="match_parent"
            android:layout_height="340dp"
            android:layout_marginLeft="@dimen/standard"
            android:layout_marginRight="@dimen/standard"
            android:background="@drawable/dialog_bg"
            android:orientation="vertical"
            app:behavior_hideable="true"
            app:behavior_peekHeight="80dp"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
            >

        <ImageView
                android:id="@+id/doubleUpView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:src="@drawable/ic_double_up"
                android:visibility="gone"
                />

        <ImageView
                android:id="@+id/doubleDownView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:src="@drawable/ic_double_down"
                />

        <androidx.constraintlayout.widget.Barrier
                android:id="@+id/directionViews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="doubleUpView,doubleDownView"
                />

        <TextView
                android:id="@+id/titleView"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="@dimen/standard_half"
                android:layout_marginLeft="@dimen/standard"
                android:layout_marginRight="@dimen/standard"
                android:text="@string/choose_airports"
                android:textColor="@color/colorPrimaryDark"
                app:layout_constraintTop_toBottomOf="@+id/directionViews"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                />

        <TextView
                android:id="@+id/originTitleView"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/standard_double"
                android:layout_marginRight="@dimen/standard_double"
                android:text="@string/choose_origin"
                android:textColor="@color/colorPrimary"
                app:layout_constraintTop_toBottomOf="@+id/titleView"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                />

        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:id="@+id/originView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/standard_triple"
                android:layout_marginRight="@dimen/standard_triple"
                android:textColor="@android:color/white"
                app:layout_constraintTop_toBottomOf="@+id/originTitleView"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                />

        <View
                android:background="@color/colorPrimary"
                android:layout_height="2dp"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/standard_triple"
                android:layout_marginRight="@dimen/standard_triple"
                app:layout_constraintTop_toBottomOf="@+id/originView"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                />

        <TextView
                android:id="@+id/destinationTitleView"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="@dimen/standard_half"
                android:layout_marginLeft="@dimen/standard_double"
                android:layout_marginRight="@dimen/standard_double"
                android:text="@string/choose_destination"
                android:textColor="@color/colorPrimary"
                app:layout_constraintTop_toBottomOf="@+id/originView"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                />

        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:id="@+id/destinationView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/standard_triple"
                android:layout_marginRight="@dimen/standard_triple"
                android:textColor="@android:color/white"
                app:layout_constraintTop_toBottomOf="@+id/destinationTitleView"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                />

        <View
                android:background="@color/colorPrimary"
                android:layout_height="2dp"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/standard_triple"
                android:layout_marginRight="@dimen/standard_triple"
                app:layout_constraintTop_toBottomOf="@+id/destinationView"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                />

        <TextView
                android:id="@+id/resultView"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="@dimen/standard_double"
                android:layout_marginLeft="@dimen/standard_double"
                android:layout_marginRight="@dimen/standard_double"
                android:text="Found"
                android:textColor="@color/colorPrimaryDark"
                app:layout_constraintTop_toBottomOf="@+id/destinationView"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:visibility="gone"
                />

        <TextView
                android:id="@+id/showView"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:paddingLeft="@dimen/standard_triple"
                android:paddingRight="@dimen/standard_triple"
                android:gravity="center"
                android:text="@string/show_on_map"
                android:textColor="@android:color/white"
                android:background="@drawable/button_bg"
                app:layout_constraintTop_toBottomOf="@+id/resultView"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:visibility="gone"
                />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>